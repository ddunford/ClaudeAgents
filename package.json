{
  "name": "munero",
  "version": "0.1.0",
  "description": "An autonomous build system using Claude SDK that provides continuous feedback and improvement loops",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "docs": "typedoc --out docs src",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "coverage": "jest --coverage"
  },
  "keywords": [
    "munero",
    "claude",
    "sdk",
    "build",
    "automation",
    "ai",
    "continuous-improvement",
    "testing",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/munero.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/munero/issues"
  },
  "homepage": "https://github.com/yourusername/munero#readme",
  "dependencies": {
    "@anthropic-ai/claude-code": "^latest",
    "typescript": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "typedoc": "^0.25.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
} 